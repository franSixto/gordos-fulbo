// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id // Clerk ID
  email         String   @unique
  username      String?
  avatarUrl     String?
  favoriteTeam  String?
  isAdmin       Boolean  @default(false)
  totalPoints   Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  predictions   Prediction[]
  createdLeagues League[] @relation("CreatedLeagues")
  leagues       League[] @relation("LeagueParticipants")
}

model Tournament {
  id        String   @id @default(uuid())
  name      String
  year      Int
  teamType  String?
  config    String?  // JSON string for tournament structure (stages, groups, etc.)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  matches   Match[]
}

model Team {
  id        String   @id @default(uuid())
  name      String   @unique
  type      String   // "Club" | "Selección"
  logoUrl   String?
  country   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Match {
  id            String     @id @default(uuid())
  teamA         String
  teamB         String
  date          DateTime
  tournamentId  String
  tournament    Tournament @relation(fields: [tournamentId], references: [id], onDelete: Cascade)
  stage         String?    // Ej: "Fase de Grupos", "Octavos", "Fecha 1"
  group         String?    // Ej: "Grupo A", "Zona 1"
  actualScoreA  Int?
  actualScoreB  Int?
  isPlayed      Boolean    @default(false)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  predictions   Prediction[]
}

model League {
  id              String   @id @default(uuid())
  name            String
  description     String?
  type            String   // "Pública" | "Privada"
  createdByUserId String
  createdByUser   User     @relation("CreatedLeagues", fields: [createdByUserId], references: [id])
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  participants    User[]   @relation("LeagueParticipants")
}

model Prediction {
  id              String   @id @default(uuid())
  matchId         String
  match           Match    @relation(fields: [matchId], references: [id], onDelete: Cascade)
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  predictedScoreA Int
  predictedScoreB Int
  points          Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([matchId, userId])
}
